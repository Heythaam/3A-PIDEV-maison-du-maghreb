<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link rel="preconnect" href="https://fonts.gstatic.com">
        <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{asset('css/bootstrapBack.css')}}">

        <link rel="stylesheet" href="{{asset('vendors/iconly/bold.css')}}">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

        <link rel="stylesheet" href="{{asset('vendors/perfect-scrollbar/perfect-scrollbar.css')}}">
        <link rel="stylesheet" href="{{asset('vendors/bootstrap-icons/bootstrap-icons.css')}}">
        <link rel="stylesheet" href="{{asset('css/appBack.css')}}">
        <link rel="shortcut icon" href="{{asset('images/favicon.svg')}}" type="image/x-icon">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        
    </head>
    <body>
    <div id="sidebar" class="active">
            <div class="sidebar-wrapper active">
                <div class="sidebar-header">
                    <div class="d-flex justify-content-between">
                            <a href="index.html"><img src="{{asset('images/logo/maison_maghreb.png')}}" width="150" height="150" alt="Logo" srcset=""></a>
                        <div class="toggler">
                            <a href="#" class="sidebar-hide d-xl-none d-block"><i class="bi bi-x bi-middle"></i></a>
                        </div>
                    </div>
                </div>
                <div class="sidebar-menu">
                    <ul class="menu">
                        <li class="sidebar-title">Menu</li>

                        <li class="sidebar-item {% if app.request.attributes.get('_route') == 'app_main' %}active{% endif %} ">
                            <a href="/main" class='sidebar-link'>
                                <i class="bi bi-grid-fill"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>

                        <li class="sidebar-item {% if app.request.attributes.get('_route') == 'app_user' %}active{% endif %} ">
                            <a href="/user" class='sidebar-link'>
                                <i class="bi bi-people-fill"></i>
                                <span>Utilisateurs</span>
                            </a>
                        </li>

                        <li class="sidebar-item {% if app.request.attributes.get('_route') == 'app_articleBack' %}active{% endif %}">
                            <a href="/articleBack" class='sidebar-link'>
                                <i class="bi bi-card-image"></i>
                                <span>Articles</span>
                            </a>
                        </li>

                        <li class="sidebar-item {% if app.request.attributes.get('_route') == 'app_formationBack' %}active{% endif %}">
                            <a href="/formationBack" class='sidebar-link'>
                                <i class="bi bi-brush"></i>
                                <span>Formations</span>
                            </a>
                        </li>
                        <li class="sidebar-item {% if app.request.attributes.get('_route') == 'app_evenementBack' %}active{% endif %}">
                            <a href="/evenementBack" class='sidebar-link'>
                                <i class="bi bi-calendar-event"></i>
                                <span>Evenements</span>
                            </a>
                        </li>
                        <li class="sidebar-item {% if app.request.attributes.get('_route') == 'app_produit' %}active{% endif %}">
                            <a href="/produit" class='sidebar-link'>
                                <i class="bi bi-cart-fill"></i>
                                <span>Produits</span>
                            </a>
                        </li>
                        <li class="sidebar-item {% if app.request.attributes.get('_route') == 'app_collaboration' %}active{% endif %}">
                            <a href="/collaboration" class='sidebar-link'>
                                <i class="bi bi-grid-1x2-fill"></i>
                                <span>Collaborations</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <button class="sidebar-toggler btn x"><i data-feather="x"></i></button>
            </div>
        </div>
        {% block body %}{% endblock %}
        <script src="{{asset('vendors/perfect-scrollbar/perfect-scrollbar.min.js')}}"></script>
        <script src="{{asset('js/bootstrap.bundle.min.js')}}"></script>

        <script src="{{asset('vendors/apexcharts/apexcharts.js')}}"></script>
        <script src="{{asset('js/pages/dashboard.js')}}"></script>

        <script src="{{asset('js/main.js')}}"></script>
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </body>
</html>
